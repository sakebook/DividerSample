<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/list_item_background_even"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item">

    <TextView
        android:id="@+id/text_title"
        android:text="even"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingTop="@dimen/text_padding"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_only_list_primary_text_size"
        android:textColor="@color/dark_text_primary_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_sub_title"
        android:layout_below="@+id/text_title"
        android:text="even"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingBottom="@dimen/text_padding"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_only_list_secondary_text_size"
        android:textColor="@color/dark_text_secondary_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>